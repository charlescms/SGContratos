   SELECT PEDVENDASITENS.NUMPED,PEDVENDASITENS.CODINT,PEDVENDASITENS.NOME,PEDVENDASITENS.PRODCOD,PEDVENDASITENS.VALUNI,Sum(PEDVENDASITENS.QTDE) as QTDE ,Sum(PEDVENDASITENS.DESCONTO) as DESCONTO,Sum(PEDVENDASITENS.VALTOT) as VALTOT 
     FROM PEDVENDASITENS  where PEDVENDASITENS.NUMPED =
  GROUP BY PEDVENDASITENS.NUMPED,PEDVENDASITENS.CODINT,PEDVENDASITENS.NOME,PEDVENDASITENS.PRODCOD ,PEDVENDASITENS.VALUNI ORDER BY PEDVENDASITENS.NOME 
