procedure TFormRel_ValorRecebi.ConstroiSql;
var
  s_filtro : string ;
  S_CLICOD  : STRING ;
  N_INC  , N_FIN : INTEGER ;

begin
  s_filtro := '' ;
  if DT_INCIAL.DateValue <> CMS_Data_vazia then
     s_filtro := 'OrdemCobranca.Recebimento >= ' + AtribuiAspas( COPY( DT_INCIAL.Text , 7, 4)+ '/'+ COPY( DT_INCIAL.Text , 4,2)+'/'+ COPY( DT_INCIAL.Text , 1,2)) ; // '' + COPY( DT_INCIAL.Text , 7, 4)+ '/'+ COPY( DT_INCIAL.Text , 4,2)+'/'+ COPY( DT_INCIAL.Text , 1,2) + ''''

